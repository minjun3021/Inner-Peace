<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121319"
    tools:context=".fragment.HomeFragment">

    <TextView
        android:id="@+id/home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="58dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="10sp"
        android:text="ㅁㅁㅁ님"
        android:textColor="#996ad7"
        android:textSize="21sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="행복한 하루 보내세요"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/home_name"
        app:layout_constraintTop_toBottomOf="@id/home_name" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#f0f0f0"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="6sp"
        android:id="@+id/home_connectingtext"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/home_connect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="11dp"
        android:text="결과를 측정 중 입니다"
        />

    <ImageView
        android:id="@+id/home_connect"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/ic_splash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_text" />

    <com.loopeer.shadow.ShadowView
        android:id="@+id/home_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="48dp"
        android:elevation="10dp"
        app:backgroundColor="#121319"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_connect"
        app:layout_constraintVertical_bias="0.2"
        app:shadowColor="#29ffffff"
        app:shadowMarginBottom="10dp"
        app:shadowMarginRight="10dp"

        app:shadowRadius="14dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:background="@drawable/bg_diary" />


    </com.loopeer.shadow.ShadowView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:letterSpacing="-0.03"
        android:id="@+id/home_text3"
        android:lineSpacingExtra="6sp"
        android:text="수고했어, 오늘도"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:translationZ="11dp"
        app:layout_constraintLeft_toLeftOf="@id/home_box"
        app:layout_constraintRight_toRightOf="@id/home_box"
        app:layout_constraintTop_toTopOf="@id/home_box" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="#ad81d9"
        android:letterSpacing="-0.03"
        app:layout_constraintLeft_toLeftOf="@id/home_box"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@id/home_text2"
        android:lineSpacingExtra="5sp"
        android:id="@+id/home_text1"
        android:layout_marginTop="10dp"
        android:translationZ="11dp"
        app:layout_constraintTop_toBottomOf="@id/home_text3"
        android:text="TIP"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationZ="11dp"
        android:textSize="10sp"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="@id/home_box"
        app:layout_constraintLeft_toRightOf="@id/home_text1"
        android:letterSpacing="-0.03"
        android:id="@+id/home_text2"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/home_text1"
        android:lineSpacingExtra="5sp"
        android:text="Diary를 통해 너의 하루를 기록 해 봐!"
        />
</androidx.constraintlayout.widget.ConstraintLayout>