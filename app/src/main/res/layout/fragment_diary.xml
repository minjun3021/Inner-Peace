<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121319"

    tools:context=".fragment.DiaryFragment"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/fragment_diary_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="58dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="10sp"
            android:text="ㅁㅁㅁ님"
            android:textColor="#996ad7"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="9sp"
            android:text="의"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/fragment_diary_name"
            app:layout_constraintLeft_toRightOf="@id/fragment_diary_name"
            app:layout_constraintTop_toTopOf="@id/fragment_diary_name"
            />

        <TextView
            android:id="@+id/fragment_diary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="9sp"
            android:text="하루는 어땠나요?"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="@id/fragment_diary_name"
            app:layout_constraintTop_toBottomOf="@id/fragment_diary_name"
            />


            <ImageView
                android:layout_width="0dp"
                android:layout_height="67dp"
                android:layout_marginTop="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginHorizontal="25dp"

                app:layout_constraintTop_toBottomOf="@id/fragment_diary_title"
                android:src="@drawable/bg_diary"
                android:elevation="4dp"
                />



    </android.support.constraint.ConstraintLayout>
</ScrollView>