<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121319"
    tools:context=".fragment.ProfileFragment">


    <TextView
        android:id="@+id/fragment_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="58dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="10sp"
        android:text="ㅁㅁㅁ님"
        android:textColor="#996ad7"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="의 프로필"
        android:textColor="#ffffff"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_name"
        app:layout_constraintLeft_toRightOf="@id/fragment_profile_name"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_name" />

    <ImageView
        android:id="@+id/profile_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_setting"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/fragment_profile_name"
        app:layout_constraintBottom_toBottomOf="@id/fragment_profile_name"
         />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_profile"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_name"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_name" />

    <Button
        android:id="@+id/profile_info1"
        android:layout_width="56dp"
        android:textSize="9sp"
        android:textColor="#fff"
        android:layout_height="23dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/button_soso"
        app:layout_constraintLeft_toRightOf="@id/profile_profile"
        app:layout_constraintBottom_toTopOf="@id/profile_stress1"
        app:layout_constraintTop_toTopOf="@id/profile_profile" />

    <Button
        android:id="@+id/profile_info2"
        android:layout_width="56dp"
        android:layout_height="23dp"
        android:layout_marginLeft="7dp"
        android:textSize="9sp"
        android:textColor="#fff"
        android:background="@drawable/button_soso"
        app:layout_constraintLeft_toRightOf="@id/profile_info1"
        app:layout_constraintTop_toTopOf="@id/profile_info1" />

    <Button
        android:id="@+id/profile_info3"
        android:layout_width="56dp"
        android:layout_height="23dp"
        android:textSize="9sp"
        android:textColor="#fff"
        android:layout_marginLeft="7dp"
        android:background="@drawable/button_soso"
        app:layout_constraintLeft_toRightOf="@id/profile_info2"
        app:layout_constraintTop_toTopOf="@id/profile_info1" />

    <Button
        android:id="@+id/profile_stress1"
        android:textSize="9sp"
        android:textColor="#fff"
        android:layout_width="56dp"
        android:layout_height="23dp"
        android:background="@drawable/button_soso"
        app:layout_constraintTop_toBottomOf="@id/profile_info1"
        app:layout_constraintLeft_toLeftOf="@id/profile_info1"
        app:layout_constraintBottom_toBottomOf="@id/profile_profile" />

    <Button
        android:id="@+id/profile_stress2"

        android:layout_width="56dp"
        android:layout_height="23dp"
        android:textSize="9sp"
        android:textColor="#fff"
        android:layout_marginLeft="7dp"
        android:background="@drawable/button_soso"
        app:layout_constraintLeft_toRightOf="@id/profile_info1"

        app:layout_constraintTop_toTopOf="@id/profile_stress1" />

    <Button
        android:id="@+id/profile_stress3"
        android:layout_width="56dp"
        android:textSize="9sp"
        android:textColor="#fff"
        android:layout_height="23dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/button_soso"
        app:layout_constraintBottom_toBottomOf="@id/profile_stress1"
        app:layout_constraintLeft_toRightOf="@id/profile_info2" />

    <TextView
        android:id="@+id/fragment_profile_graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:letterSpacing="-0.03"
        android:lineSpacingExtra="9sp"
        android:text="통계"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_name"
        app:layout_constraintTop_toBottomOf="@id/profile_profile" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/bg_diary"
        android:tint="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/fragment_profile_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_profile_graph"

        />
</androidx.constraintlayout.widget.ConstraintLayout>